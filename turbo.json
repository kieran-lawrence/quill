{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"],
            "env": [
                "NEXT_PUBLIC_GIPHY_API_KEY",
                "NEXT_PUBLIC_SOCKET_URI",
                "PORT",
                "COOKIE_SECRET",
                "COOKIE_MAX_AGE",
                "SESSION_NAME",
                "DB_HOST",
                "DB_PORT",
                "DB_USERNAME",
                "DB_PASSWORD",
                "DB_NAME",
                "FILE_UPLOAD_DESTINATION"
            ]
        },
        "typecheck": {
            "outputs": []
        },
        "lint": {},
        "test": {},
        "test:e2e": {}
    }
}
